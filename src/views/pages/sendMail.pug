doctype html
html
  head
    title Gửi Email
  body
    h1 Gửi Email
    form(action="/send-mail" method="POST")
      label Email người nhận:
      br
      input(type="email" name="to" required)
      br
      label Tiêu đề:
      br
      input(type="text" name="subject" required)
      br
      label Nội dung:
      br
      textarea(name="text" required)
      br
      button(type="submit") Gửi
