extends ../layouts/main.pug

block content
  .container.my-5
    .row.justify-content-center
      .col-lg-8
        .card.mb-4.shadow-sm
          .card-body.text-center.py-5
            .success-icon.mb-3
              svg(xmlns='http://www.w3.org/2000/svg', width='64', height='64', fill='currentColor', class='bi bi-check-circle', viewBox='0 0 16 16')
                path(d='M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z')
                path(d='M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z')
            h2.mb-3 Booking Completed!
            p.text-muted.mb-0
              | Your booking has been completed. We have sent email to you.
        .d-flex.justify-content-between
          a.btn.btn-outline-secondary(onclick=`window.location.href='/'`) Back to Homepage
          a.btn.btn-primary Manage Booking
